---
import Footer from "../components/Footer.svelte";
import { ViewTransitions, fade } from "astro:transitions";
import Navigation from "../components/uiComponents/headerComponents/Navigation.svelte";
import Profile from "../components/profile.astro";
import "../styles/global.scss";

interface Props {
  title: string;
}
const { user } = Astro.locals;
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script>

      const themeToggles = document.querySelectorAll("[data-theme-toggle]");
      const getTheme = () => localStorage.getItem("theme") || "light";
      const setTheme = (theme:string) =>
        document.documentElement.setAttribute("data-theme", theme);

      window.addEventListener("DOMContentLoaded", () => setTheme(getTheme()));
      document.addEventListener("astro:after-swap", () => setTheme(getTheme()));

      themeToggles.forEach((toggle) => {
        toggle.addEventListener("click", () => {
          const nextTheme = getTheme() === "light" ? "dark" : "light";
          localStorage.setItem("theme", nextTheme);
          setTheme(nextTheme);
        });
      });
    </script>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body transition:animate="slide">
    <script is:inline>
      const theme = localStorage.getItem("theme") || "light";
      document.documentElement.dataset.theme = theme;
    </script>
    <header>
      
      <button data-theme-toggle transition:persist class="darkmode-button"
      ></button>

      <a href="/" class="logo"><img src="/logo.svg" alt="" /></a>
      <div class="nav-profile">
        <Navigation user={user ?? ""} client:load />
        {user ? <Profile /> : ""}
      </div>
    </header>
    <slot />
    <Footer />
    <style lang="scss">
      .darkmode-button {
        background-color: var(--button-darkmode-bg);
      }
      
    </style>
  </body>
</html>
