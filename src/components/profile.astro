---
import { HolidazeGateWay } from "../gateway/HolidazeGateway";
import type { User } from "../types/types";
import ProfieTool from "./uiComponents/profileComponents/ProfileTool.svelte";
import ModalFormUpdate from "./uiComponents/modal/ModalFormUpdate.astro";
const holidazeGateWay = new HolidazeGateWay();
const { user, token } = Astro.locals;

if (!user || !token) return;

let data: User | null;
try {
  const fetchedData = await holidazeGateWay.profile(
    user,
    token,
    import.meta.env.API_KEY
  );
  data = fetchedData?.data;
} catch (error) {
  console.error("Failed to fetch data:", error);
  data = null;
}
---
<ModalFormUpdate />
<ProfieTool data={data} client:load />
